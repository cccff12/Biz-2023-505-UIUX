 // 표 형식으로 데이터 출력
console.table(rndNum);

  //   소수점 이하 자르기, 정수로 만들기
  num = Math.floor(num);
  // blank 배열에 요소 추가하기
  rndNum.push(num);

  // for의 확장문과 같음
rndNum.forEach((item) => {
  console.log(item);
});
